<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:QuizForge.App.ViewModels"
             xmlns:models="clr-namespace:QuizForge.Models"
             xmlns:converters="clr-namespace:QuizForge.App.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="QuizForge.App.Views.PdfPreviewView"
             x:DataType="vm:PdfPreviewViewModel">
             
    <Design.DataContext>
        <vm:PdfPreviewViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Spacing="10">
            <!-- 页面导航 -->
            <Button Command="{Binding FirstPageCommand}" Content="首页" Width="60"/>
            <Button Command="{Binding PreviousPageCommand}" Content="上一页" Width="80"/>
            <Button Command="{Binding NextPageCommand}" Content="下一页" Width="80"/>
            <Button Command="{Binding LastPageCommand}" Content="末页" Width="60"/>
            
            <Separator Width="20"/>
            
            <!-- 缩放控制 -->
            <Button Command="{Binding ZoomInCommand}" Content="放大" Width="60"/>
            <Button Command="{Binding ZoomOutCommand}" Content="缩小" Width="60"/>
            <Button Command="{Binding FitToWidthCommand}" Content="适应宽度" Width="100"/>
            
            <Separator Width="20"/>
            
            <!-- 预览选项 -->
            <ToggleButton Command="{Binding ToggleSealLineCommand}" Content="密封线" Width="80" IsChecked="{Binding ShowSealLine}"/>
            <ToggleButton Command="{Binding ToggleHighQualityCommand}" Content="高质量" Width="80" IsChecked="{Binding IsHighQualityMode}"/>
            <ToggleButton Command="{Binding ToggleThumbnailViewCommand}" Content="缩略图" Width="80" IsChecked="{Binding IsThumbnailViewVisible}"/>
            <ToggleButton Command="{Binding ToggleMouseWheelZoomCommand}" Content="滚轮缩放" Width="90" IsChecked="{Binding IsMouseWheelZoomEnabled}"/>
            <ToggleButton Command="{Binding ToggleDragNavigationCommand}" Content="拖动浏览" Width="90" IsChecked="{Binding IsDragNavigationEnabled}"/>
            <ToggleButton Command="{Binding ToggleContinuousScrollCommand}" Content="连续滚动" Width="90" IsChecked="{Binding IsContinuousScrollEnabled}"/>
            <ToggleButton Command="{Binding ToggleDualPageViewCommand}" Content="双页显示" Width="90" IsChecked="{Binding IsDualPageViewEnabled}"/>
            
            <Separator Width="20"/>
            
            <!-- 图像调整 -->
            <Button Command="{Binding IncreaseBrightnessCommand}" Content="亮度+" Width="70"/>
            <Button Command="{Binding DecreaseBrightnessCommand}" Content="亮度-" Width="70"/>
            <Button Command="{Binding IncreaseContrastCommand}" Content="对比度+" Width="80"/>
            <Button Command="{Binding DecreaseContrastCommand}" Content="对比度-" Width="80"/>
            <Button Command="{Binding ResetImageAdjustmentsCommand}" Content="重置" Width="60"/>
            
            <Separator Width="20"/>
            
            <!-- 操作按钮 -->
            <Button Command="{Binding ExportToPdfCommand}" Content="导出PDF" Width="100"/>
            <Button Command="{Binding PrintCommand}" Content="打印" Width="60"/>
            <Button Command="{Binding RefreshCommand}" Content="刷新" Width="60"/>
            <Button Command="{Binding ShowPropertiesCommand}" Content="属性" Width="60"/>
        </StackPanel>
        
        <!-- 主内容区 -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧试卷列表 -->
            <Border Grid.Column="0" BorderBrush="#e0e0e0" BorderThickness="1" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="试卷列表" FontSize="16" FontWeight="Bold" Margin="5"/>
                    
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding ExamPapers}" 
                             SelectedItem="{Binding SelectedExamPaper}"
                             Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd}'}" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding TotalPoints, StringFormat='{}{0} 分'}" FontSize="12" Foreground="Blue"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- 右侧预览区 -->
            <Border Grid.Column="1" BorderBrush="#e0e0e0" BorderThickness="1" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 预览信息区 -->
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 左侧信息 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="20">
                            <TextBlock Text="{Binding SelectedExamPaper.Title}" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{Binding CurrentPage, StringFormat='{}第 {0} 页'}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalPages, StringFormat='{}共 {0} 页'}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ZoomLevel, StringFormat='{}缩放: {0}%'}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding PreviewQuality, StringFormat='{}质量: {0}%'}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Brightness, StringFormat='{}亮度: {0}'}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Contrast, StringFormat='{}对比度: {0}'}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- 右侧显示模式 -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                            <ComboBox ItemsSource="{Binding DisplayModes}"
                                      SelectedItem="{Binding DisplayMode}"
                                      Width="120">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <TextBlock Text="{Binding Converter={StaticResource EnumToDisplayNameConverter}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            
                            <Button Command="{Binding SavePreviewConfigCommand}" Content="保存配置" Width="80"/>
                            <Button Command="{Binding LoadPreviewConfigCommand}" Content="加载配置" Width="80"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- 预览内容区 -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200" MinWidth="150" MaxWidth="300"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 主预览区 -->
                        <Border Grid.Column="0"
                                Background="White"
                                Margin="10,10,5,10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <Grid>
                                <!-- 预览图像 -->
                                <Image Source="{Binding CurrentPreviewImage}"
                                       Stretch="Uniform"
                                       Width="{Binding ZoomLevel, ConverterParameter=800, Converter={StaticResource ZoomConverter}}"
                                       Height="{Binding ZoomLevel, ConverterParameter=1130, Converter={StaticResource ZoomConverter}}"
                                       IsVisible="{Binding CurrentPreviewImage, Converter={StaticResource NullToVisibleConverter}}">
                                    </Image>
                                 
                                <!-- 占位符 -->
                                <Image Source="/Assets/document-placeholder.png"
                                       Stretch="Uniform"
                                       Width="{Binding ZoomLevel, ConverterParameter=800, Converter={StaticResource ZoomConverter}}"
                                       Height="{Binding ZoomLevel, ConverterParameter=1130, Converter={StaticResource ZoomConverter}}"
                                       IsVisible="{Binding CurrentPreviewImage, Converter={StaticResource NullToVisibleConverter}, ConverterParameter=Invert}"/>
                                 
                                <!-- 提示文本 -->
                                <TextBlock Text="请选择一份试卷进行预览"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="16"
                                           Foreground="Gray"
                                           IsVisible="{Binding SelectedExamPaper, Converter={StaticResource NullToVisibleConverter}, ConverterParameter=Invert}"/>
                            </Grid>
                        </Border>
                        
                        <!-- 缩略图区 -->
                        <Border Grid.Column="1"
                                Background="#f5f5f5"
                                BorderBrush="#e0e0e0"
                                BorderThickness="1"
                                Margin="5,10,10,10"
                                IsVisible="{Binding IsThumbnailViewVisible}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- 缩略图标题 -->
                                <TextBlock Grid.Row="0"
                                           Text="缩略图"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="5"/>
                                
                                <!-- 缩略图列表 -->
                                <ScrollViewer Grid.Row="1"
                                              HorizontalScrollBarVisibility="Disabled"
                                              VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding ThumbnailImages}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#e0e0e0"
                                                        BorderThickness="1"
                                                        Margin="5"
                                                        Cursor="Hand">
                                                    <Grid>
                                                        <Image Source="{Binding Image}"
                                                               Stretch="Uniform"
                                                               Width="200"
                                                               Height="200"/>
                                                        <TextBlock Text="{Binding PageNumber}"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Bottom"
                                                                   Background="#80000000"
                                                                   Foreground="White"
                                                                   Padding="2"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                    
                    <!-- 导出进度区 -->
                    <Grid Grid.Row="2" Margin="10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="导出进度" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                        
                        <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="5">
                            <ProgressBar Value="{Binding ExportProgress}" 
                                         Maximum="100" 
                                         Height="20"
                                         IsVisible="{Binding IsExporting}"/>
                            <TextBlock Text="{Binding ExportProgress, StringFormat='{}{0}%'}" 
                                       IsVisible="{Binding IsExporting}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        
        <!-- 底部状态栏 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,5">
            <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>