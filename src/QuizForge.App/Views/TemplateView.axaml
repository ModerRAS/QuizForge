<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:QuizForge.App.ViewModels"
             xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="QuizForge.App.Views.TemplateView"
             x:DataType="vm:TemplateViewModel">
             
    <Design.DataContext>
        <vm:TemplateViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Spacing="10">
            <Button Command="{Binding NewTemplateCommand}" Content="新建模板" Width="100"/>
            <Button Command="{Binding SaveTemplateCommand}" Content="保存模板" Width="100" IsVisible="{Binding IsEditing}"/>
            <Button Command="{Binding DeleteTemplateCommand}" Content="删除模板" Width="100"/>
            <Button Command="{Binding PreviewTemplateCommand}" Content="预览模板" Width="100"/>
            <Button Command="{Binding ExportTemplateCommand}" Content="导出模板" Width="100"/>
            <Button Command="{Binding ImportTemplateCommand}" Content="导入模板" Width="100"/>
            
            <Separator Width="20"/>
            
            <TextBox Text="{Binding SearchText, Mode=TwoWay}" Watermark="搜索模板..." Width="200" VerticalAlignment="Center"/>
            <Button Command="{Binding SearchTemplatesCommand}" Content="搜索" Width="60"/>
        </StackPanel>
        
        <!-- 主内容区 -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧模板列表 -->
            <Border Grid.Column="0" BorderBrush="#e0e0e0" BorderThickness="1" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="模板列表" FontSize="16" FontWeight="Bold" Margin="5"/>
                    
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Templates}" 
                             SelectedItem="{Binding SelectedTemplate}"
                             Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Sections.Count, StringFormat='{}{0} 个节'}" FontSize="12" Foreground="Blue"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- 右侧模板编辑区 -->
            <Border Grid.Column="1" BorderBrush="#e0e0e0" BorderThickness="1" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 模板信息编辑区 -->
                    <StackPanel Grid.Row="0" Margin="10">
                        <TextBlock Text="模板信息" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                        
                        <Grid ColumnDefinitions="100,*" Margin="0,5">
                            <TextBlock Text="名称:" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding TemplateName, Mode=TwoWay}" IsEnabled="{Binding IsEditing}"/>
                        </Grid>
                        
                        <Grid ColumnDefinitions="100,*" Margin="0,5">
                            <TextBlock Text="描述:" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding TemplateDescription, Mode=TwoWay}" 
                                     IsEnabled="{Binding IsEditing}"
                                     Height="60" 
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"/>
                        </Grid>
                        
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0" 
                                    IsVisible="{Binding IsEditing}">
                            <Button Command="{Binding SaveTemplateCommand}" Content="保存" Width="80"/>
                            <Button Command="{Binding CancelEditCommand}" Content="取消" Width="80"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- 模板节列表 -->
                    <Grid Grid.Row="1" Margin="10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="模板节" FontSize="16" FontWeight="Bold"/>
                            <Button Command="{Binding AddSectionCommand}" Content="添加节" Width="80"/>
                            <Button Command="{Binding DeleteSectionCommand}" Content="删除节" Width="80"/>
                        </StackPanel>
                        
                        <controls:DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding Sections}" 
                                  SelectedItem="{Binding SelectedSection}"
                                  AutoGenerateColumns="False"
                                  GridLinesVisibility="All"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  Margin="0,5,0,0">
                            <controls:DataGrid.Columns>
                                <controls:DataGridTextColumn Header="标题" Binding="{Binding Title}" Width="*"/>
                                <controls:DataGridTextColumn Header="题目数量" Binding="{Binding QuestionCount}" Width="100"/>
                                <controls:DataGridTextColumn Header="总分值" Binding="{Binding TotalPoints}" Width="100"/>
                            </controls:DataGrid.Columns>
                        </controls:DataGrid>
                    </Grid>
                    
                    <!-- 节编辑区 -->
                    <Border Grid.Row="2" BorderBrush="#e0e0e0" BorderThickness="1" Margin="10,10,10,0" 
                            IsVisible="{Binding IsEditing}">
                        <StackPanel Margin="10">
                            <TextBlock Text="节信息" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                            
                            <Grid ColumnDefinitions="80,*" Margin="0,5">
                                <TextBlock Text="标题:" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SectionName, Mode=TwoWay}"/>
                            </Grid>
                            
                            <Grid ColumnDefinitions="80,*" Margin="0,5">
                                <TextBlock Text="描述:" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SectionDescription, Mode=TwoWay}" 
                                         Height="60" 
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"/>
                            </Grid>
                            
                            <Grid ColumnDefinitions="80,*" Margin="0,5">
                                <TextBlock Text="题目数量:" VerticalAlignment="Center"/>
                                <NumericUpDown Value="{Binding QuestionCount}" 
                                             Minimum="1" 
                                             Maximum="100" 
                                             Increment="1"
                                             FormatString="0"/>
                            </Grid>
                            
                            <Grid ColumnDefinitions="80,*" Margin="0,5">
                                <TextBlock Text="难度:" VerticalAlignment="Center"/>
                                <ComboBox ItemsSource="{Binding Difficulties}" 
                                          SelectedItem="{Binding Difficulty}"/>
                            </Grid>
                            
                            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                                <Button Command="{Binding SaveSectionCommand}" Content="保存节" Width="80"/>
                                <Button Command="{Binding CancelEditCommand}" Content="取消" Width="80"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 节预览区 -->
                    <Grid Grid.Row="3" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="节预览" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                        
                        <ScrollViewer Grid.Row="1">
                            <TextBlock Text="{Binding SelectedSection.Instructions}" 
                                       TextWrapping="Wrap"
                                       Margin="5"/>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        
        <!-- 底部状态栏 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,5">
            <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>