{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "QuizForge": "Debug"
    }
  },
  "LaTeX": {
    "TemplatePath": "./Fixtures/Templates",
    "OutputPath": "./TestResults/Output",
    "WorkingDirectory": "./TestResults/Temp",
    "CleanupTempFiles": true,
    "MaxRetries": 3,
    "CommandTimeout": "00:02:00"
  },
  "Excel": {
    "DefaultSheet": "Sheet1",
    "HeaderRow": 1,
    "StartRow": 2,
    "MaxRows": 10000,
    "Encoding": "UTF8"
  },
  "PDF": {
    "EnablePreview": false,
    "PreviewWidth": 800,
    "PreviewHeight": 600,
    "DPI": 300,
    "Compression": true,
    "OptimizeForWeb": false
  },
  "Templates": {
    "Directory": "./Fixtures/Templates",
    "DefaultTemplate": "standard.tex",
    "AllowedExtensions": [".tex", ".latex"],
    "MaxFileSize": 1048576
  },
  "CLI": {
    "DefaultOutputDirectory": "./TestResults/Output",
    "MaxParallel": 2,
    "EnableVerbose": true,
    "EnableProgress": false,
    "ContinueOnError": true,
    "ValidateFiles": true
  },
  "TestSettings": {
    "UseMockServices": true,
    "MockDataPath": "./MockData",
    "TestTimeout": "00:01:00",
    "GenerateTestReports": true,
    "CleanTestFiles": true,
    "PerformanceTestIterations": 10,
    "StressTestFileCount": 100
  }
}